<%= form_with model: [ @blog, @blog.comments.build ] do |form| %>
    <p>
        <%= form.label :commenter %><br>
        <%= form.text_field :commenter %>
    </p>
    <p>
        <%= form.label :body %><br>
        <%= form.text_area :body %>
    </p>
    <p>
        <%= form.hidden_field :blog_id, value: @blog.id %>
    </p>
    <% if @blog.errors.any? %>
    <%= @blog.errors.full_messages.each do |m| %>
    <%end%>
  <%end%>
    <p>
        <%= form.submit %>
    </p>
<% end %>