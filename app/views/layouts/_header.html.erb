<div class="container-fluid">
    <nav class="navbar navbar-inverse navbar-light" >
        <div class="navbar-header">
            <h1><%= link_to 'The Howard Post', root_path %></h1>
        </div>
        <ul class="nav">
            <li class="nav-item nav-link active"><%= link_to 'Home', root_path %></li>
            <li class="nav-item nav-link dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Account <span><i class="far fa-user-circle"></i></span></a>
                <ul class="dropdown-menu">
                    <% if user_signed_in? %>
                        <h6 class="dropdown-header">Profile</h6>
                        <li class="dropdown-item">
                            <%= link_to "View", users_show_path %>
                        </li>
                        <li class="dropdown-item">
                            <%= link_to "Edit", edit_user_registration_path %>
                        </li>
                        <div class="dropdown-divider"></div>
                        <li class="dropdown-item">
                            <%= link_to "Logout", destroy_user_session_path, method: :delete %>
                        </li>
                    <% else %>
                        <li class="dropdown-item">
                            <%= link_to "Login", new_user_session_path %>
                        </li>
                        <li class="dropdown-item">
                            <%= link_to "Register", new_user_registration_path %>
                        </li>
                    <% end %>
                    </ul>
            </li>
            <li class="nav-item nav-link dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Blogs</a>
                <ul class="dropdown-menu">
                    <li class="dropdown-item">
                        <%= link_to "Index", blog_index_path %>
                    </li>
                    <% if user_signed_in? %>
                        <li class="dropdown-item">
                            <%= link_to "Add", new_blog_path %>
                        </li>
                    <% end %>
                    </ul>
            </li>
            <%= form_tag(blog_index_path, :method => "get", id: "search-form", :class=>"form-inline navbar-form navbar-right") do %>
                <%= text_field_tag :search, params[:search], placeholder: "Search...", :class=>"form-control" %>
                <span class="btn btn-default">
                    <i class="fas fa-search"></i> 
                    <%= submit_tag "Search" %>
                </span>
            <% end %>
            <li class="nav-item nav-link">
                <span><i class="far fa-arrow-alt-circle-left"></i></span><%= link_to " Back" , :back, {:class => "link"}  %>
            </li>
        </ul>
    </nav>
</div>