<div class="container-fluid">
    <div class="row">
        <div class="col-lg-10 registration-box">
            <div class="row">
                <div class='col-lg-7'>
                    <h2>Blog Posts</h2>
                </div>
                <div class="col-sm-1">
                    <button type="button" class="btn btn-info float-right" data-toggle="collapse" href="#viewByMonth" role="button" aria-expanded="false" aria-controls="viewByMonth">View By Month</button>
                </div>
                <div class="col-sm-1">
                    <button type="button" class="btn btn-info float-right" data-toggle="collapse" href="#viewLatest" role="button" aria-expanded="false" aria-controls="viewLatest">List Latest</button>
                </div>
                <div class="col-sm-1">
                    <button type="button" class="btn btn-info float-right" data-toggle="collapse" href="#viewArchived" role="button" aria-expanded="false" aria-controls="viewArchived">List Archived</button>
                </div>
                <hr/>
            </div>
            <% if @blogs.count() > 0 %>
                <div class="row collapse multi-collapse login-box" id="viewByMonth">
                    <% @blogs_by_month.each do |monthName, blogs| %>
                        <%= monthName %>
                        <% blogs.each do |blog| %>
                            <% if !blog.archived? %>
                                <div class="jumbotron container-fluid">
                                    <h1 class="display-12 jumbotron-title"><%= blog.title %></h1>
                                    <br/>
                                    <p class="lead">
                                        <%= truncate(blog.body, :length => 300) %>
                                    </p>
                                    <br/> 
                                    <p class="lead float-right">
                                        <strong>Author:</strong> <%=blog.user.full_name%> |
                                        <strong>Created On:</strong> <%=blog.created_at.to_date%> |
                                        <strong>Modified On:</strong> <%=blog.updated_at.to_date%>
                                        <%if blog.comments.count > 0 %>
                                            | <strong>Comments:</strong> <%=blog.comments.count%>
                                        <% end %>
                                    </p>
                                    <br/>
                                    <hr/>
                                    <p class="float-right"><%= link_to "View", blog_path(blog) %>
                                    <% if user_signed_in? %>
                                        | <%= link_to "Edit", edit_blog_path(blog) %>
                                        <% if blog.deleted_at == nil %>
                                            | <%= link_to "Delete", blog_path(blog), method: :delete %>
                                        <% elsif blog != nil %>
                                            | <%= link_to "Delete Permenantly", blog_path(blog, del: "Destroy"), method: :delete, notice: "Your blog was successfully deleted." %> | 
                                            <%= link_to "Undo Delete", blog_path(blog), method: :delete %>
                                        <% end %>   
                                        <% if !blog.archived? %>
                                            | <%= link_to "Archive", blog_path(blog, arc: "Archive"), method: :delete %>
                                        <% end %> 
                                    <% else %>
                                        </p><p>Please <%= link_to "Login", new_user_session_path %> or 
                                        <%= link_to "Register", new_user_registration_path %> to modify or delete a blog post.</p>
                                    <% end %>
                                </div>
                                <br/>
                            <% end %>
                        <% end %>
                    <% end %>
                </div>
                <div class="row multi-collapse login-box" id="viewLatest">
                    <% @blogs.each do |blog| %>
                        <% if !blog.archived? %>
                            <div class="jumbotron container-fluid">
                                <h1 class="display-12 jumbotron-title"><%= blog.title %></h1>
                                <br/>
                                <p class="lead">
                                    <%= truncate(blog.body, :length => 300) %>
                                </p>
                                <br/> 
                                <p class="lead float-right">
                                    <strong>Author:</strong> <%=blog.user.full_name%> |
                                    <strong>Created On:</strong> <%=blog.created_at.to_date%> |
                                    <strong>Modified On:</strong> <%=blog.updated_at.to_date%>
                                    <%if blog.comments.count > 0 %>
                                        | <strong>Comments:</strong> <%=blog.comments.count%>
                                    <% end %>
                                </p>
                                <br/>
                                <hr/>
                                <p class="float-right"><%= link_to "View", blog_path(blog) %>
                                <% if user_signed_in? %>
                                    | <%= link_to "Edit", edit_blog_path(blog) %>
                                    <% if blog.deleted_at == nil %>
                                        | <%= link_to "Delete", blog_path(blog), method: :delete %>
                                    <% elsif blog != nil %>
                                        | <%= link_to "Delete Permenantly", blog_path(blog, del: "Destroy"), method: :delete, notice: "Your blog was successfully deleted." %> | 
                                        <%= link_to "Undo Delete", blog_path(blog), method: :delete %>
                                    <% end %>   
                                    <% if !blog.archived? %>
                                        | <%= link_to "Archive", blog_path(blog, arc: "Archive"), method: :delete  %>
                                    <% end %> 
                                <% else %>
                                    </p><>Please <%= link_to "Login", new_user_session_path %> or 
                                    <%= link_to "Register", new_user_registration_path %> to modify or delete a blog post.</>
                                <% end %>
                            </div>
                            <br/>
                        <% end %>
                    <% end %>
                </div>
                <div class="collapse multi-collapse login-box" id="viewArchived">
                    <% if @blogs.archive_count > 0 %>
                        <% @blogs.each do |blog| %>
                            <% if blog.archived? %>
                                <div class="jumbotron container-fluid">
                                    <h1 class="display-12 jumbotron-title"><%= blog.title %></h1>
                                    <br/>
                                    <p class="lead">
                                        <%= truncate(blog.body, :length => 300) %>
                                    </p>
                                    <br/> 
                                    <p class="lead float-right">
                                        <strong>Author:</strong> <%=blog.user.full_name%> |
                                        <strong>Created On:</strong> <%=blog.created_at.to_date%> |
                                        <strong>Modified On:</strong> <%=blog.updated_at.to_date%>
                                        <%if blog.comments.count > 0 %>
                                            | <strong>Comments:</strong> <%=blog.comments.count%>
                                        <% end %>
                                    </p>
                                    <br/>
                                    <hr/>
                                    <p class="float-right"><%= link_to "View", blog_path(blog) %>
                                    <% if user_signed_in? %>
                                        | <%= link_to "Edit", edit_blog_path(blog) %>
                                        <% if blog.deleted_at == nil %>
                                            | <%= link_to "Delete", blog_path(blog), method: :delete %>
                                        <% elsif blog != nil %>
                                            | <%= link_to "Delete Permenantly", blog_path(blog, del: "Destroy"), method: :delete, notice: "Your blog was successfully deleted." %> | 
                                            <%= link_to "Undo Delete", blog_path(blog), method: :delete %>
                                        <% end %>   
                                        <% if !blog.archived? %>
                                            | <%= link_to "Archive", blog_path(blog, arc: "Archive"), method: :delete  %>
                                        <% end %> 
                                    <% else %>
                                        </p><p>Please <%= link_to "Login", new_user_session_path %> or 
                                        <%= link_to "Register", new_user_registration_path %> to modify or delete a blog post.</p>
                                    <% end %>
                                </div>
                                <br/>
                            <% end %>
                        <% end %>
                    <% else %>
                    <p>There are no archived blog posts...</p>
                    <% end %>
                </div>
                <div class="row">
                    <hr/>
                    <% if user_signed_in? %>
                        <button type="button" class="btn btn-info btn-block"><%= link_to "Add New Blog Post", new_blog_path %></button>
                    <% end %>
                </div>
            <% else %>
                <% if !params[:search].nil? %>
                    <p>There are no posts containing the term(s) <%= params[:search] %>.</p>
                    <p class="float-right">
                        <%= link_to "Back to Blog Index", blog_index_path %>
                    </p>
               <% else %>
                    <p>There are no articles yet, please create a blog post...</p>
                    <p class="float-right">
                        <%= link_to "Back to Home", root_path %>
                    </p>
                <%end%>
            <%end%>
        </div>
    </div>
</div>

