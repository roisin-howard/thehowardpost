<%= form_with model: blog do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title, :size=>"100" %>
    
  </div>

  <div>
    <%= form.label :body %><br>
    <%= form.text_area :body, :size=>"100x10" %><br>
    
  </div>

  <div>
    <%= form.hidden_field :users_id, value: current_user.id %>
    <%= form.hidden_field :status, value: 'public'%>
  </div>

  <% if blog.errors.any? %>
    <%= blog.errors.full_messages.each do |m| %>
    <%end%>
  <%end%>

  <div>
    <%= form.submit %>
  </div>
<% end %>